{
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@0.7.3"
        }
    },

    "routes": [
        {
            "src": "/api/index.php",
            "dest": "/api/index.php"
        },
        {
            "src": "/assets/style/style.css",
            "dest": "/public/css/style.css"
        },
        {
            "src": "/assets/scripts/script.js",
            "dest": "/public/js/app.js"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ]
}